CC=g++
CFLAGS = -g -I -Wall -std=c++11
LDFLAGS = -pthread

# Header Files
DEPS = atomic_value.h \
			 blocking_queue.h \
			 fast_rand.h \
			 fifoqueue.h \
			 lamport_lock.h \
			 lock.h \
			 queue_exceptions.h
			 
OBJ = main-block.o \
			lamport_lock.o

EXC = main_block

%.o: %.cpp $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

make: $(OBJ)
	$(CC) -o $(EXC) $^ $(LDFLAGS)

clean:
	rm *.o
